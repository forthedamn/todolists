{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "noEmitHelpers": true
  },
  "include": [
    "./**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "vscode": {
    "rewriteTsconfig": true
  }
}
